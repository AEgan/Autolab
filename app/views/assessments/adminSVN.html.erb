<h2>Admin Svn for <%= current_assessment_link %></h2>

<table class=prettyBorder >
  <tr><th>email</th><th>Repository</th></tr>
  <% for cud in @cuds do %>
    <% repo = @assessment.aud_for(cud).repository %>
    <tr>
      <td><%= cud.email %></td>
      <td>
        <%= form_tag setRepository_course_assessment_path(@course, @assessment, cud_id: cud.id), method: :post %>
          <%= text_field_tag 'repository', repo, size: 80 %>
          <%= submit_tag (if repo then 'Edit' else 'Create' end) %>
        </form>
      </td>
    </tr>
  <% end %>
</table>

<br>

<b>Load repositories from previous assignment: </b>

<%= form_tag url_for(action: :importSVN), method: 'post' %>
  <%= select_tag(:importfrom, options_from_collection_for_select(@assessments, :id, :name)) %>
  <%= submit_tag 'Go!' %>
</form>
